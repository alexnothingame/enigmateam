
FROM golang:1.21-alpine AS builder
ENV GOFLAGS=-mod=mod
WORKDIR /src
COPY go.mod ./
RUN go mod download || true
COPY . .
RUN CGO_ENABLED=0 GOOS=linux GOARCH=amd64 go build -o /out/telegram-client ./cmd/telegram-client

FROM alpine:3.19
WORKDIR /app
RUN apk --no-cache add ca-certificates
COPY --from=builder /out/telegram-client /app/telegram-client
CMD ["/app/telegram-client"]
